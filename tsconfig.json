{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "tests/**/*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
