{
  "name": "wegweiser",
  "version": "1.2.0",
  "description": "Chrome extension for OpenRouter - chat with models from your browser sidebar",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "playwright test --config=playwright.config.ts",
    "test:smoke:headed": "playwright test --config=playwright.config.ts --headed",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "release": "node scripts/release.js",
    "security:scan": "node scripts/security/scan-repo-secrets.js",
    "security:scan:staged": "node scripts/security/scan-staged-secrets.js",
    "hooks:install": "git config core.hooksPath .githooks",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write \"**/*.{js,ts,json,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "chrome-extension",
    "openrouter",
    "ai",
    "chatbot",
    "gpt"
  ],
  "author": "Wegweiser Contributors",
  "license": "MIT"
}